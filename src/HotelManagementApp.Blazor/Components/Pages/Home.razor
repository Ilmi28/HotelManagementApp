@code {
    private List<HotelViewModel> featuredHotels;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Docelowo: pobranie danych z API
            var client = HttpClientFactory.CreateClient("HotelApi");
            var response = await client.GetFromJsonAsync<List<HotelViewModel>>("api/hotel/get-all");
            if (!response.IsNullOrEmpty())
            {
                featuredHotels = response?.Take(3).ToList();
            }
            else
            {
                // Dane testowe
                featuredHotels = new List<HotelViewModel>
                {
                    new HotelViewModel { Id = 1, Name = "Grand Hotel", City = "Warszawa", Country = "Polska", Rating = 5, ImageUrl = "images/hotel1.jpg" },
                    new HotelViewModel { Id = 2, Name = "Royal Palace", City = "Kraków", Country = "Polska", Rating = 4, ImageUrl = "images/hotel2.jpg" },
                    new HotelViewModel { Id = 3, Name = "Sea View Resort", City = "Gdańsk", Country = "Polska", Rating = 5, ImageUrl = "images/hotel3.jpg" }
                };
            }
            


        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading hotels: {ex.Message}");
            featuredHotels = new List<HotelViewModel>();
        }
    }

    private void GoToHotels()
    {
        NavigationManager.NavigateTo("/hotels");
    }

    private void GoToRegister()
    {
        NavigationManager.NavigateTo("/register");
    }

    private void ViewHotelDetails(int hotelId)
    {
        NavigationManager.NavigateTo($"/hotel/{hotelId}");
    }

    public class HotelViewModel
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string City { get; set; }
        public string Country { get; set; }
        public int Rating { get; set; }
        public string ImageUrl { get; set; }
    }
}