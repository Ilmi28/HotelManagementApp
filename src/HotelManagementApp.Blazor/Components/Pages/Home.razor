@page "/"
@using Microsoft.IdentityModel.Tokens
@inject HttpClient Http
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager NavigationManager

<PageTitle>Hotel Management System - Strona główna</PageTitle>

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Najlepszy system zarządzania hotelem</h1>
                <p class="lead">Odkryj nowy poziom komfortu i wygody. Zarządzaj rezerwacjami, gośćmi i usługami w jednym miejscu.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button class="btn btn-primary btn-lg px-4 me-md-2" @onclick="GoToHotels">Przeglądaj hotele</button>
                    <button class="btn btn-outline-secondary btn-lg px-4" @onclick="GoToRegister">Dołącz teraz</button>
                </div>
            </div>
            <div class="col-md-6 d-none d-md-block">
                <img src="images/hotel-hero.jpg" class="img-fluid rounded-3 shadow" alt="Luksusowy hotel">
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4 py-4 row-cols-1 row-cols-md-3">
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <h3>Rezerwacje online</h3>
                <p>Łatwe i szybkie rezerwowanie pokojów hotelowych bez dodatkowych opłat.</p>
            </div>
        </div>
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-credit-card"></i>
                </div>
                <h3>Bezpieczne płatności</h3>
                <p>Wiele metod płatności z gwarancją bezpieczeństwa transakcji.</p>
            </div>
        </div>
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-award"></i>
                </div>
                <h3>Program lojalnościowy</h3>
                <p>Zbieraj punkty za każdy pobyt i wymieniaj je na atrakcyjne nagrody.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="section-heading text-center mb-4">
        <h2>Polecane hotele</h2>
        <p class="text-muted">Odkryj wyjątkowe miejsca, które czekają na Ciebie</p>
    </div>
    
    @if (featuredHotels == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Ładowanie...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var hotel in featuredHotels)
            {
                <div class="col-md-4">
                    <div class="card hotel-card h-100 border-0 shadow-sm">
                        <img src="@(string.IsNullOrEmpty(hotel.ImageUrl) ? "images/hotel-placeholder.jpg" : hotel.ImageUrl)" 
                            class="card-img-top" alt="@hotel.Name">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary rounded-pill">@hotel.City</span>
                                <div class="hotel-rating">
                                    @for (int i = 0; i < hotel.Rating; i++)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                </div>
                            </div>
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text text-muted">@hotel.Country</p>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <button class="btn btn-sm btn-outline-primary w-100" @onclick="() => ViewHotelDetails(hotel.Id)">
                                Zobacz szczegóły
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <button class="btn btn-outline-primary px-4" @onclick="GoToHotels">
                Zobacz wszystkie hotele
            </button>
        </div>
    }
</div>

<div class="cta-section py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="display-6 fw-bold text-white mb-3">Nie masz jeszcze konta?</h2>
                <p class="lead text-white opacity-75 mb-4">Zarejestruj się już dziś i zyskaj dostęp do specjalnych ofert i promocji.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <button class="btn btn-light btn-lg px-4" @onclick="GoToRegister">
