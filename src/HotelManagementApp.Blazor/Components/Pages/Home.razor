@page "/"
@using Microsoft.IdentityModel.Tokens
@inject HttpClient Http
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager NavigationManager

<PageTitle>Hotel Management System - Strona główna</PageTitle>

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Najlepszy system zarządzania hotelem</h1>
                <p class="lead">Odkryj nowy poziom komfortu i wygody. Zarządzaj rezerwacjami, gośćmi i usługami w jednym miejscu.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button class="btn btn-primary btn-lg px-4 me-md-2" @onclick="GoToHotels">Przeglądaj hotele</button>
                    <button class="btn btn-outline-secondary btn-lg px-4" @onclick="GoToRegister">Dołącz teraz</button>
                </div>
            </div>
            <div class="col-md-6 d-none d-md-block">
                <img src="images/hotel-hero.jpg" class="img-fluid rounded-3 shadow" alt="Luksusowy hotel">
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4 py-4 row-cols-1 row-cols-md-3">
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <h3>Rezerwacje online</h3>
                <p>Łatwe i szybkie rezerwowanie pokojów hotelowych bez dodatkowych opłat.</p>
            </div>
        </div>
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-credit-card"></i>
                </div>
                <h3>Bezpieczne płatności</h3>
                <p>Wiele metod płatności z gwarancją bezpieczeństwa transakcji.</p>
            </div>
        </div>
        <div class="col">
            <div class="feature-card">
                <div class="icon-box">
                    <i class="bi bi-award"></i>
                </div>
                <h3>Program lojalnościowy</h3>
                <p>Zbieraj punkty za każdy pobyt i wymieniaj je na atrakcyjne nagrody.</p>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="section-heading text-center mb-4">
        <h2>Co mówią nasi klienci</h2>
        <p class="text-muted">Opinie gości, którzy skorzystali z naszych usług</p>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="testimonial-card">
                <div class="testimonial-rating mb-3">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                </div>
                <p class="testimonial-text">"Fantastyczna obsługa i piękne pokoje. Rezerwacja przez system była prosta i szybka. Na pewno wrócę!"</p>
                <div class="testimonial-author">
                    <img src="images/user1.jpg" alt="Anna Kowalska" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <h6 class="mb-0">Anna Kowalska</h6>
                        <small class="text-muted">Warszawa</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card">
                <div class="testimonial-rating mb-3">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-half text-warning"></i>
                </div>
                <p class="testimonial-text">"Bardzo wygodny system rezerwacji. Wszystko działa płynnie, a obsługa hotelu jest na najwyższym poziomie."</p>
                <div class="testimonial-author">
                    <img src="images/user2.jpg" alt="Jan Nowak" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <h6 class="mb-0">Jan Nowak</h6>
                        <small class="text-muted">Kraków</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial-card">
                <div class="testimonial-rating mb-3">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                </div>
                <p class="testimonial-text">"Zdecydowanie polecam! System lojalnościowy to świetny pomysł, a obsługa jest zawsze pomocna i profesjonalna."</p>
                <div class="testimonial-author">
                    <img src="images/user3.jpg" alt="Maria Wiśniewska" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <h6 class="mb-0">Maria Wiśniewska</h6>
                        <small class="text-muted">Wrocław</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToHotels()
    {
        NavigationManager.NavigateTo("/hotels");
    }

    private void GoToRegister()
    {
        NavigationManager.NavigateTo("/register");
    }

    private void ViewHotelDetails(int hotelId)
    {
        NavigationManager.NavigateTo($"/hotel/{hotelId}");
    }
}